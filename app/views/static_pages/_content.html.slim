	            .item
                  .row
                    .col-xs-12.col-sm-4.col-md-4
                      = render 'shared/components/resource_details', title: 'Posts',
                                                                     count: @counts[Resource::RESOURCE_TYPES[:post]],
                                                                     list: @posts,
                                                                     resource_type: :post
                    .col-xs-12.col-sm-4.col-md-4
                      = render 'shared/components/resource_details', title: 'Profiles',
                                                                     count: @counts[Resource::RESOURCE_TYPES[:profile]],
                                                                     list: @profiles,
                                                                     resource_type: :profile
                    .col-xs-12.col-sm-4.col-md-4
                      = render 'shared/components/resource_details', title: 'Urls',
                                                                     count: @counts[Resource::RESOURCE_TYPES[:url]],
                                                                     list: @urls,
                                                                     resource_type: :url
